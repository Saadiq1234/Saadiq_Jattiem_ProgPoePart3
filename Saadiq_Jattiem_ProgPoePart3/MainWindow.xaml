<Window x:Class="RecipeManagerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe Manager" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="PlaceholderTextBoxStyle" TargetType="TextBox">
            <Style.Resources>
                <VisualBrush x:Key="CueBannerBrush" AlignmentX="Left" AlignmentY="Center" Stretch="None">
                    <VisualBrush.Visual>
                        <TextBlock Text="Recipe Name" Foreground="Gray" />
                    </VisualBrush.Visual>
                </VisualBrush>
            </Style.Resources>
            <Style.Triggers>
                <Trigger Property="Text" Value="">
                    <Setter Property="Background" Value="{DynamicResource CueBannerBrush}" />
                </Trigger>
                <Trigger Property="Text" Value="{x:Null}">
                    <Setter Property="Background" Value="{DynamicResource CueBannerBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="10">
            <TextBlock Text="Recipe Manager" FontSize="24" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="Enter Recipe Details" Click="EnterRecipeDetails_Click" Margin="5"/>
                <Button Content="Display All Recipes" Click="DisplayAllRecipes_Click" Margin="5"/>
                <Button Content="Clear Data" Click="ClearData_Click" Margin="5"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="RecipeNameTextBox" Width="200" Margin="5" Style="{StaticResource PlaceholderTextBoxStyle}" />
                <Button Content="Display Recipe" Click="DisplayRecipe_Click" Margin="5"/>
                <Button Content="Delete Recipe" Click="DeleteRecipe_Click" Margin="5"/>
            </StackPanel>
        </StackPanel>

        <ScrollViewer Grid.Row="1" Margin="10">
            <TextBlock x:Name="OutputTextBlock" TextWrapping="Wrap"/>
        </ScrollViewer>
    </Grid>
</Window>
